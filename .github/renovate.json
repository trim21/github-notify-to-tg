{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>trim21/renovate-config",
    "github>trim21/renovate-config:rust"
  ],
  "prConcurrentLimit": 3,
  "labels": [
    "ci:auto-merge",
    "dependencies"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "cargo": {
    "enabled": true
  },
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchDepTypes": [
        "requires-python"
      ],
      "enabled": false
    }
  ]
}
